{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./node_modules/*"]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}